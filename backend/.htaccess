RewriteEngine On
RewriteBase /hotel_opulent/backend/api/

# CORS headers
Header always set Access-Control-Allow-Origin "http://127.0.0.1:5500"
Header always set Access-Control-Allow-Credentials "true"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"

# Xử lý preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Nếu truy cập trực tiếp tên file, chuyển về root
RewriteRule ^index\.php$ - [L]

# Chuyển tất cả các request không phải file/directory đến index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?route=$1 [QSA,L]